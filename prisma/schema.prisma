generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(cuid()) // Or uuid()
  email     String     @unique
  name      String?
  password  String     // hashed pword
  isAdmin   Boolean    @default(false)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  sessions  Session[]  
  purchases Purchase[] 
}

model Session {
  id        String   @id @default(cuid()) // this will be the cookie value
  userId    String
  expiresAt DateTime
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@index([userId])
}

model Product {
  id          String     @id @default(cuid())
  name        String
  description String?
  price       Float
  image       String?
  category    String?
  stock       Int      @default(0)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  purchases   Purchase[]
}

model Purchase {
  id        String   @id @default(cuid())
  userId    String
  productId String
  quantity  Int
  totalAmount Float
  date      DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  product   Product  @relation(fields: [productId], references: [id])

  @@index([userId])
  @@index([productId])
}